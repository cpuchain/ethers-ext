{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
        ],
        "target": "ES2022",
        "lib": ["ES2016", "ES2021", "ES2022", "DOM", "ESNext"],
        "module": "CommonJS",
        "outDir": "./lib",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "test",
        "scripts"
    ],
    "exclude": ["node_modules"],
    "files": ["./hardhat.config.ts"]
}